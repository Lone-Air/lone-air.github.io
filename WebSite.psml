command(new page whoissth);

#html<5>
head{
    word-wrap: true
}
#title<Who is sth?>
style{
    [
    .title{
width: 300px;
margin: 10px auto;
padding: 10px 0px;
text-align: center;
    }
    ]
}
/head();
body();

div{
class: title
}
b{}
p{
inner: [Welcome to Who IS STH?];
end:true;
word-wrap:true;
color: orange
}
/b{}
input{
placeholder: [The name of the person you think IS sth]
onchange: [sth(this)]
}
button{
inner: [IS STH]
onclick: [issth(this)]
br: true
}
b{}
p{
color: red;
inner: [ATTENTION: For entertainment only]
           end: true
           word-wrap:true
id: ATT
}
/b{}

script(javascript){
    [
        let whoissth="";
        function sth(elem){
            var val=elem.value
            if(val=="mystery"){
                elem.readonly=true
                whoissth="XZN"
                getElementById("ATT").inner="NOW! You CANNOT refresh this web page"
            }
            else{
                whoissth=val
            }
            refresh_sth(elem)
        }

        function refresh_sth(elem){
            elem.value=whoissth
        }

        function issth(elem){
            var val=elem.value;
            var think=prompt("do you think he/she IS sth? (yes/no)", "yes");
            if (think=="yes"){
                alert("yes, you're right")
            }
        }

        window.onbeforeunload=function(){
            alert("You CANNOT Refresh")
            return false
        }
    ]
}

/div{}

